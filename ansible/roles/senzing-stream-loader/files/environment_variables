#!/bin/bash

export SENZING_ROOT=/opt/senzing
export SENZING_G2_DIR=${SENZING_ROOT}/g2
export SENZING_VAR_DIR=/var/senzing
export SENZING_SUPPORT_PATH=${SENZING_VAR_DIR}/data
export SENZING_CONFIG_PATH=/var/senzing/etc
export PYTHONPATH=${SENZING_ROOT}/g2/python
export LD_LIBRARY_PATH=${SENZING_ROOT}/g2/lib:${SENZING_ROOT}/g2/lib/debian
export SENZING_DATA_SOURCE=${SENZING_DATA_SOURCE:-TEST}
export SENZING_DATABASE_URL="postgresql://${POSTGRES_USERNAME:-postgres}:${POSTGRES_PASSWORD:-postgres}@127.0.0.1:5432/${POSTGRES_DB:-G2}"
export SENZING_DELAY_IN_SECONDS=60
export SENZING_ENTITY_TYPE=${SENZING_ENTITY_TYPE:-TEST}
export SENZING_KAFKA_BOOTSTRAP_SERVER=127.0.0.1:9092
export SENZING_KAFKA_TOPIC=senzing-kafka-topic
export SENZING_MONITORING_PERIOD_IN_SECONDS=${SENZING_MONITORING_PERIOD_IN_SECONDS:-60}
export SENZING_PROCESSES=${SENZING_PROCESSES:-1}
export SENZING_SUBCOMMAND=kafka